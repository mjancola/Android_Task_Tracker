<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hopto.mjancola.android.task_tracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="org.hopto.mjancola.android.task_tracker.HomeActivity"
            android:label="Task Tracker" >
        </activity>
        <activity
            android:name="org.hopto.mjancola.android.task_tracker.OverdueActivity"
            android:label="Task Tracker" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hopto.mjancola.android.task_tracker.TaskActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>